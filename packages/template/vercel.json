{
  "version": 2,
  "name": "website-builder-tool-template",
  "buildCommand": "make project PKG=packages/template",
  "outputDirectory": "packages/template/.next",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://api.example.com/$1" }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "@next_public_api_url"
  },
  "regions": ["iad1", "sfo1"]
}
