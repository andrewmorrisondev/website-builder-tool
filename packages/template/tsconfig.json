{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "../../../",
    "baseUrl": "../..",
    "paths": {
      "@components/*": [
        "packages/components/*"
      ],
      "@mui/*": [
        "node_modules/@mui/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "jsx": "preserve"
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx", // Include TypeScript and TSX files from app directory
    "**/*.ts",
    "**/*.tsx", // Include other files in the same level, such as layout.tsx, page.tsx
    "../../packages/components/**/*", // Update path to components
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
